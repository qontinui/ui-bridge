{
  "name": "ui-bridge-server",
  "version": "0.1.0",
  "description": "UI Bridge Server - HTTP/WebSocket server adapters for UI Bridge",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./express": {
      "types": "./dist/express.d.ts",
      "import": "./dist/express.mjs",
      "require": "./dist/express.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs.d.ts",
      "import": "./dist/nextjs.mjs",
      "require": "./dist/nextjs.js"
    },
    "./standalone": {
      "types": "./dist/standalone.d.ts",
      "import": "./dist/standalone.mjs",
      "require": "./dist/standalone.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "ui-bridge": "*"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "express": "^4.18.2",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qontinui/ui-bridge.git",
    "directory": "packages/ui-bridge-server"
  },
  "keywords": [
    "ui-bridge",
    "server",
    "express",
    "nextjs",
    "http",
    "websocket"
  ]
}
